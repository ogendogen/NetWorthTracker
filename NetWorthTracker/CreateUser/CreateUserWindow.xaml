<Window x:Class="NetWorthTracker.CreateUser.CreateUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NetWorthTracker.CreateUser"
        mc:Ignorable="d"
        Title="CreateUserWindow" Height="200" Width="200">
    <Grid>
        <Label Content="Nazwa Użytkownika" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="10,41,0,0" TextWrapping="Wrap" Text="{Binding UserName, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="160" Height="25"/>
        <Button Content="Stwórz" Command="{Binding CreateUser}"  HorizontalAlignment="Left" Margin="10,84,0,0" VerticalAlignment="Top" Height="32" Width="160"/>

    </Grid>
</Window>
