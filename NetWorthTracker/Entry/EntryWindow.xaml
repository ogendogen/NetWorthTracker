<Window x:Class="NetWorthTracker.Entry.EntryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NetWorthTracker.Entry"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        mc:Ignorable="d"
        Title="Wpisy" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Grid.Column="0" Content="Aktywa" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <DataGrid Grid.Row="1" Grid.Column="0" ItemsSource="{Binding Assets}" AutoGenerateColumns="False" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nazwa" Binding="{Binding Name}" Width="*" IsReadOnly="true"/>
                <DataGridTextColumn Header="Wartość" Binding="{Binding Value}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <Label Grid.Row="0" Grid.Column="1" Content="Zobowiązania" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <DataGrid Grid.Row="1" Grid.Column="1" ItemsSource="{Binding Debts}" AutoGenerateColumns="False" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nazwa" Binding="{Binding Name}" Width="*" IsReadOnly="true"/>
                <DataGridTextColumn Header="Wartość" Binding="{Binding Value}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <Label Grid.Row="0" Grid.Column="2" Content="Wykres zmian" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <lvc:CartesianChart Grid.Row="1" Grid.Column="2" Series="{Binding Series}"/>

        <Label Grid.Row="2" Grid.Column="0" Content="Suma: 0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Label Grid.Row="2" Grid.Column="1" Content="Suma: 0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Window>
