<Window x:Class="NetWorthTracker.Main.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NetWorthTracker.Main"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        mc:Ignorable="d"
        Title="Net Worth Tracker" Height="650" Width="925">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Definicje">
                <MenuItem Header="Aktywa" Command="{Binding Actives}"/>
                <MenuItem Header="Zobowiązania" Command="{Binding Debts}"/>
            </MenuItem>
        </Menu>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="9*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <DataGrid Grid.Column="0" Grid.Row="0" ItemsSource="{Binding Entries}"
                  SelectedItem="{Binding SelectedEntry}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False">
                <DataGrid.InputBindings>
                    <MouseBinding Gesture="LeftDoubleClick" Command="{Binding EditEntry}"/>
                </DataGrid.InputBindings>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Data" Binding="{Binding Date, StringFormat='dd/MM/yyyy HH:mm'}" Width="6*" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Wartość" Binding="{Binding Value}" Width="4*" IsReadOnly="True"/>
                </DataGrid.Columns>
            </DataGrid>
            <UniformGrid Grid.Column="0" Grid.Row="1" Columns="2">
                <Button Command="{Binding AddEntry}">Dodaj</Button>
                <Button Command="{Binding RemoveEntry}">Usuń</Button>
            </UniformGrid>
            <lvc:CartesianChart Grid.Row="0" Grid.Column="1" Series="{Binding Series}" XAxes="{Binding XAxes}"/>
        </Grid>
    </DockPanel>
</Window>
